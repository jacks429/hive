{
  inputs,
  nixpkgs,
  root,
}: renamer: let
  cellBlock = "pipelineMonitors";
  l = nixpkgs.lib // builtins;
  inherit (root) walkPaisano;

  walk = self:
    walkPaisano self cellBlock (system: cell: [
      (l.mapAttrs (target: config: {
        _file = "Cell: ${cell} - Block: ${cellBlock} - Target: ${target}";
        imports = [config];
      }))
      (l.mapAttrs (_: config: {
        # Basic metadata
        name = config.name or "";
        description = config.description or "";
        
        # Pipeline monitor configuration
        pipeline = config.pipeline or {};
        metrics = config.metrics or [];
        alerts = config.alerts or [];
        schedule = config.schedule or {};
        
        # System information
        system = config.system or system;
      }))
      (l.filterAttrs (_: config: config.system == system))
    ])
    renamer;
in
  walk
